.margin-top-40
  .row
    .large-12.columns

      %h1 Your Uploaded Content
      .margin-bottom-40
        = link_to "New Content", new_upload_path, class: 'f-btn-primary'

      %table
        %thead
          %tr
            %th{width: 600} Message
            %th{width: 200} Image
            %th{width: 200}
        %tbody
          - @contents.each do |content|
            %tr
              %td= content.message
              %td
                - if content.asset_content_type == "image/jpeg"
                  = image_tag(content.asset.url(:thumb))
                - if content.asset_content_type == "audio/mpeg"
                  = link_to content.asset.url do
                    = image_tag('music-thumb.png', style: 'max-width: 100px;')
              %td
                = link_to "Edit", edit_upload_path(content), class: 'f-btn-primary small'


