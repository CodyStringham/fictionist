.margin-top-40
  .row
    .large-12.columns

      %h1 Your Uploaded Content
      .margin-bottom-40
        = link_to "New Content", new_content_path, class: 'f-btn-primary'

      %table
        %thead
          %tr
            %th{width: 600} Message
            %th{width: 200} Image
            %th{width: 200}
        %tbody
          - @contents.each do |content|
            %tr
              %td= content.message
              %td
                = place_asset(content)
              %td
                = link_to "Edit", edit_content_path(content), class: 'f-btn-primary small'
                = link_to content_path(content), :confirm => 'Are you sure?', :method => :delete, class: 'f-btn-primary icon' do
                  %span.fa.fa-trash



