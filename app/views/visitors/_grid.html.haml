.grid-container
  .text-center.margin-vertical-20
    %a.f-btn-primary.filter-btn.small.active{href: "filter_all"} All
    %a.f-btn-primary.filter-btn.small{href: "filter_video"} Video
    %a.f-btn-primary.filter-btn.small{href: "filter_images"} Images
    %a.f-btn-primary.filter-btn.small{href: "filter_music"} Music

  #hidden-grid.hide
  #fictionist-grid.transitions-enabled.centered.clearfix
    - Content.all.each do |content|
      .box.col2.grid-box
        = link_to content_path(content.id), class: 'hover-caption' do
          %span= content.message
        = place_asset(content, nil, 'thumb')
