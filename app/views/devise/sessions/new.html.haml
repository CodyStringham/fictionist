.margin-top-40
  .row
    .medium-6.columns
      .authform
        %h3 Sign in with:
        .margin-bottom-40
          = link_to user_omniauth_authorize_path('twitter'), class: ' fa-spin f-btn-primary icon margin-right-10' do
            %span.fa.fa-twitter.fa-pulse
          = link_to user_omniauth_authorize_path('facebook'), class: 'f-btn-primary icon' do
            %span.fa.fa-facebook.fa-spin
        %hr
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
          = devise_error_messages!
          .form-group
            - if devise_mapping.registerable?
              = link_to 'Sign up', new_registration_path(resource_name), class: 'right'
            = f.label :email
            = f.email_field :email, :autofocus => true, class: 'form-control'
          .form-group
            - if devise_mapping.recoverable?
              = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
            = f.label :password
            = f.password_field :password, class: 'form-control'
          = f.submit 'Sign in', :class => 'f-btn-primary right'
          - if devise_mapping.rememberable?
            .checkbox{:style => "width:150px"}
              %label
                = f.check_box :remember_me
                Remember me

    .medium-6.columns
      %h3 Not a member?
      = link_to "Register", new_user_registration_path, class: 'f-btn-primary small'
