.form-group{class: attribute.errors? ? "has-error" : ""}
  %label{for: attribute.form_id}
    = 'View Permission'
  - if attribute.editable? && f = form_builder
    .select
      = f.collection_select :view_permission, Content.view_permissions, :last, :first

  - else
    %p.well
      = attribute.value
